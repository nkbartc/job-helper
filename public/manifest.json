{
  "manifest_version": 3,
  "name": "Job Notes Saver",
  "version": "0.4.4",
  "description": "Save notes for job postings, highlight companies with notes, and hide unwanted companies from LinkedIn job listings.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.linkedin.com/jobs/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Job Notes Saver",
    "default_popup": "index.html"
  }
}
